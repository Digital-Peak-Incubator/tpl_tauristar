<?xml version="1.0" encoding="utf-8"?>
<extension version="3.5" type="template" client="site" method="upgrade">
	<name>Tauristar</name>
	<creationDate>June 2016</creationDate>
	<author>Joomla</author>
	<authorEmail>info@joomla.org</authorEmail>
	<authorUrl>http://www.joomla.org</authorUrl>
	<copyright>(C) 2012 - 2016 Digital Peak. All rights reserved.
	</copyright>
	<license>GNU General Public License</license>
	<version>2.0</version>
	<description>TPL_TAURISTAR_XML_DESCRIPTION</description>
	<files>
		<filename>component.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<folder>helpers</folder>
		<folder>js</folder>
		<folder>language</folder>
		<folder>less</folder>
		<folder>vendor</folder>
	</files>
	<positions>
		<position>logo</position>
		<position>menu</position>
		<position>breadcrumbs</position>
		<position>top</position>
		<position>sidebar-left</position>
		<position>sidebar-right</position>
		<position>bottom</position>
		<position>footer</position>
	</positions>
	<config>
		<fields name="params">
			<fieldset name="basic">
			</fieldset>
			<fieldset name="advanced">
				<field name="mode" type="list" class="" default="2"
					label="TPL_TAURISTAR_MODE_LABEL" description="TPL_TAURISTAR_MODE_DESC">
					<option value="1">TPL_TAURISTAR_MODE_CSS</option>
					<option value="2">TPL_TAURISTAR_MODE_PHP_LESS</option>
					<option value="3">TPL_TAURISTAR_MODE_JS_LESS</option>
				</field>
				<field name="additional-css" class="" type="textarea" default=""
					rows="50" cols="50" label="TPL_TAURISTAR_ADDITIONAL_CSS_LABEL"
					description="TPL_TAURISTAR_ADDITIONAL_CSS_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>