<?xml version="1.0" encoding="utf-8"?>
<extension version="3.5" type="template" client="site" method="upgrade">
	<name>TPL_TAURISTAR</name>
	<creationDate>June 2016</creationDate>
	<author>Joomla! Project</author>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>http://www.joomla.org</authorUrl>
	<copyright>Copyright (C) 2005 - 2016 Open Source Matters, Inc. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<version>0.1</version>
	<description>TPL_TAURISTAR_XML_DESCRIPTION</description>
	<files>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<folder>helpers</folder>
		<folder>js</folder>
		<folder>language</folder>
		<folder>scss</folder>
		<folder>css</folder>
	</files>
	<positions>
		<position>logo</position>
		<position>menu</position>
		<position>breadcrumbs</position>
		<position>top</position>
		<position>sidebar-left</position>
		<position>sidebar-right</position>
		<position>bottom</position>
		<position>footer</position>
	</positions>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_tauristar.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_tauristar.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="scaffolding" label="TPL_TAURISTAR_SCAFFOLDING_FIELDSET_LABEL">
				<field
					name="$body-bg"
					type="text"
					label="TPL_TAURISTAR_SCSS_VARIABLE_BODY_BG_LABEL"
					description="TPL_TAURISTAR_SCSS_VARIABLE_BODY_BG_DESC"
					default="#fff"
				/>
			</fieldset>
			<fieldset name="advanced">
				<field
					name="mode"
					type="list"
					label="TPL_TAURISTAR_MODE_LABEL"
					description="TPL_TAURISTAR_MODE_DESC"
					default="1"
				>
					<option value="1">TPL_TAURISTAR_MODE_PRODUCTION</option>
					<option value="2">TPL_TAURISTAR_MODE_DEVELOPER</option>
				</field>
				<field
					name="additional-css"
					type="textarea"
					label="TPL_TAURISTAR_ADDITIONAL_CSS_LABEL"
					description="TPL_TAURISTAR_ADDITIONAL_CSS_DESC"
					default=""
					rows="50"
					cols="50"
				/>
				<field
					type="hidden"
					name="framework"
					default="bs3"
				/>
			</fieldset>
			<fieldset name="modules"  label="TPL_TAURISTAR_MODULES_FIELDSET_LABEL">
				<field
					name="modules"
					type="subform"
					label="TPL_TAURISTAR_DYNAMIC_MODULE"
					formsource="templates/tauristar/templateDetails-modules.xml"
					min="0"
					max="6"
					multiple="true"
					layout="joomla.form.field.subform.repeatable-table"
					groupByFieldset="true"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
